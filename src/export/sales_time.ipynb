import pandas as pd
import matplotlib.pyplot as plt

import os
os.chdir("C:/Users/ibrah/OneDrive/Documents/classicmodel-analysis")
from src.database.connection import get_connection

def plot_monthly_sales():
    conn = get_connection()
    query = """ SELECT 
    DATE_FORMAT(orderDate, '%Y-%m') AS month,
    SUM(quantityOrdered * priceEach) AS total_sales
FROM orders
JOIN orderdetails USING(orderNumber)
GROUP BY month
ORDER BY month;  """
    df = pd.read_sql(query, conn)

    plt.figure()
    plt.plot(df['month'], df['total_sales'])
    plt.xticks(rotation=45)
    plt.title("Ã‰volution mensuelle des ventes")
    plt.xlabel("Mois")
    plt.ylabel("Chiffre d'affaires")
    plt.tight_layout()
    plt.savefig("visualizations/monthly_sales.png")
    plt.close()
